groupadd -f video
groupadd -f dialout

echo "useradd -u $HUD -G video,dialout user"
useradd -u $HUD -G video,dialout user

echo "Configuring user's group in docker...$HGD $HGDN"
groupadd -f user -g $HGD

usermod -aG sudo user



echo "source /home/$HUNAME/local/workspace/docker/.bashrc" >> /home/user/.bashrc
echo "user ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers.d/$HUNAME
chown -R user /home/$HUNAME
echo "User configuration is ended"

